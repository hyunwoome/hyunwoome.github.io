  <thead>
    <tr>
      <th style="text-align: center">리터럴</th>
      <th style="text-align: center">예시</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td style="text-align: center">정수 리터럴</td>
      <td style="text-align: center">100</td>
    </tr>
  </tbody>
